<p id="notice"><%= notice %></p>

<h1>거래하기</h1>

<table>
  <thead>
    <tr>
      <th>Categories</th>
      <th>Items</th>
      <th>Price </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.categories %></td>
        <td><%= post.items %></td>
        <td><%= post.price_ %></td>
        <td><%= link_to '보기', post %></td>
        <td><%= link_to '수정', edit_post_path(post) %></td>
        <td><%= link_to '삭제', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '새 글 쓰기', new_post_path %><br>
